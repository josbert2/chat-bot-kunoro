  "item": [
    {
      "name": "Register User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const responseJson = pm.response.json();",
              "    pm.collectionVariables.set(\"authToken\", responseJson.token);",
              "    console.log(\"✅ Token guardado:\", responseJson.token);",
              "    console.log(\"✅ Usuario creado:\", responseJson.user);",
              "} else {",
              "    console.log(\"❌ Error:\", pm.response.json());",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "description": "Crea una nueva cuenta de usuario con workspace.\n\n**Validaciones:**\n- name: Requerido\n- email: Requerido, único\n- password: Mínimo 8 caracteres"
      },
